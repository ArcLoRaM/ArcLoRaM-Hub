{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build all project files with SFML",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",

                // ✅ Compile all .cpp files recursively
                "${workspaceFolder}/**/*.cpp",

                // ✅ SFML include and lib paths
                "-I", "C:\\Users\\srcla\\Desktop\\ArcLoRaM\\ArcLoRaM-Hub\\modules\\libraries\\SFML-3.0.0\\include",
                "-L", "C:\\Users\\srcla\\Desktop\\ArcLoRaM\\ArcLoRaM-Hub\\modules\\libraries\\SFML-3.0.0\\lib",

                // ✅ Link SFML modules
                "-lsfml-system",
                "-lsfml-network",
                "-lsfml-window",
                "-lsfml-graphics",
                "-lsfml-audio",

                // ✅ Output location
                "-o", "${workspaceFolder}\\modules\\Simulator\\exec\\app.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build full project with SFML using MSYS2 g++"
        }
    ],
    "version": "2.0.0"
}